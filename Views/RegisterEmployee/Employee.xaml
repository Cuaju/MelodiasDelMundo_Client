<UserControl x:Class="MelodiasDelMundo_Client.Views.RegisterEmployee.Employee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MelodiasDelMundo_Client.Views.RegisterEmployee"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="#FAFAFA" CornerRadius="15" Padding="30" BorderBrush="#E0E0E0" BorderThickness="1" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="🧑‍💼 Detalles del Empleado"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="👤 Nombre:" FontWeight="SemiBold" FontSize="14" Foreground="#555" 
                           Margin="0 5" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding name}" FontSize="14" Foreground="#222" 
                           Margin="0 5" Grid.Row="0" Grid.Column="1"/>
                <TextBlock Text="👥 Apellidos:" FontWeight="SemiBold" FontSize="14" Foreground="#555" 
                           Margin="0 5" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding surnames}" FontSize="14" Foreground="#222" 
                           Margin="0 5" Grid.Row="1" Grid.Column="1"/>
                <TextBlock Text="📞 Teléfono:" FontWeight="SemiBold" FontSize="14" Foreground="#555" 
                           Margin="0 5" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding phone}" FontSize="14" Foreground="#222" 
                           Margin="0 5" Grid.Row="2" Grid.Column="1"/>
                <TextBlock Text="📧 Correo Electrónico:" FontWeight="SemiBold" FontSize="14" Foreground="#555" 
                           Margin="0 5" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding mail}" FontSize="14" Foreground="#222" 
                           Margin="0 5" Grid.Row="3" Grid.Column="1"/>
                <TextBlock Text="🏙️ Ciudad:" FontWeight="SemiBold" FontSize="14" Foreground="#555" 
                           Margin="0 5" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding city}" FontSize="14" Foreground="#222" 
                           Margin="0 5" Grid.Row="4" Grid.Column="1"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>

