<Window x:Class="MelodiasDelMundo_Client.Views.MainMenu.Menus.ProductsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelodiasDelMundo_Client.Views.MainMenu.Menus"
        mc:Ignorable="d"
        Title="ProductsMenu" d:DesignHeight="850" d:DesignWidth="1200">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btRegisterProduct" Grid.Column="0" Background="#150578" Height="300" Width="200" Click="btRegisterProduct_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="&#x2795;" FontSize="90" Foreground="AliceBlue" TextAlignment="Center" />
                        <TextBlock Text="Register product" FontSize="25" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <Button x:Name="btEditProduct" Grid.Column="1" Background="#150578" Height="300" Width="200" Click="btEditProduct_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="&#x270F;" FontSize="90" Foreground="AliceBlue" TextAlignment="Center"/>
                        <TextBlock Text="Edit product" FontSize="30" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <Button x:Name="btDeleteProduct" Grid.Column="2" Background="#150578" Height="300" Width="200" Click="btDeleteProduct_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="&#128465;" FontSize="90" Foreground="AliceBlue" TextAlignment="Center"/>
                        <TextBlock Text="Delete product" FontSize="30" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <Button x:Name="btSearchProduct" Grid.Column="3" Background="#150578" Height="300" Width="200" Click="btSearchProduct_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="&#x1F50D;" FontSize="90" Foreground="AliceBlue" TextAlignment="Center"/>
                        <TextBlock Text="Search product" FontSize="30" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

        </Grid>
        <Button Background="#195ecf" Height="800" Width="1200" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Productos" Foreground="AliceBlue" FontSize="60" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0"/>
            <TextBlock x:Name="btLogout" FontFamily="Segoe UI Symbol" Text="&#xe248;" Margin="800 0 0 0" FontSize="90" Foreground="AliceBlue" MouseDown="btLogout_MouseDown" />
        </StackPanel>
        <Button Background="#195ecf" Height="800" Width="1200" Grid.Row="2"/>
    </Grid>
</Window>
