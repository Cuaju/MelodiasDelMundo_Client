<Window x:Class="MelodiasDelMundo_Client.Views.MainMenu.Menus.SuppliersMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelodiasDelMundo_Client.Views.MainMenu.Menus"
        mc:Ignorable="d"
        Title="SuppliersMenu" d:DesignHeight="850" d:DesignWidth="1200">
    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btRegisterSupplier" Grid.Column="0" Background="#2ecc71 " Height="300" Width="200" Click="btRegisterSupplier_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="&#x2795;" FontSize="90" Foreground="AliceBlue" TextAlignment="Center" />
                        <TextBlock Text="Registrar proveedor" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <Button x:Name="btEditSupplier" Grid.Column="1" Background="#2ecc71 " Height="300" Width="200" Click="btEditSupplier_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="&#x270F;" FontSize="90" Foreground="AliceBlue" TextAlignment="Center"/>
                        <TextBlock Text="Editar proveedor" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <Button x:Name="btDeleteSupplier" Grid.Column="2" Background="#2ecc71 " Height="300" Width="200" Click="btDeleteSupplier_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="&#128465;" FontSize="90" Foreground="AliceBlue" TextAlignment="Center"/>
                        <TextBlock Text="Eliminar proveedor" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <Button x:Name="btSearchSupplier" Grid.Column="3" Background="#2ecc71 " Height="300" Width="200" Click="btSearchSupplier_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="&#x1f4b0;" FontSize="90" Foreground="AliceBlue" TextAlignment="Center"/>
                        <TextBlock Text="Registrar compra" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

        </Grid>
        <Button Background="ForestGreen" Height="800" Width="1200" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Proveedores" Foreground="AliceBlue" FontSize="60" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0"/>
            <TextBlock x:Name="btLogout" FontFamily="Segoe UI Symbol" Text="&#xe248;" Margin="800 0 0 0" FontSize="90" Foreground="AliceBlue" MouseDown="btLogout_MouseDown" />
        </StackPanel>
        <Button Background="ForestGreen" Height="800" Width="1200" Grid.Row="2"/>
    </Grid>
</Window>
