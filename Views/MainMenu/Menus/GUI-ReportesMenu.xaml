<Window x:Class="MelodiasDelMundo_Client.Views.MainMenu.Menus.GUI_ReportesMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú de Reportes"
        Height="550" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#ECEFF1">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="📊 Panel de Reportes"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#263238"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,10"/>
            <TextBlock Text="Selecciona el tipo de reporte que deseas generar"
                       FontSize="14"
                       Foreground="#607D8B"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
        </StackPanel>

        <UniformGrid Rows="2" Columns="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Border Background="White"
                    CornerRadius="15"
                    Margin="15"
                    Padding="20"
                    BorderBrush="#CFD8DC"
                    BorderThickness="1"
                    Cursor="Hand"
                    Effect="{DynamicResource ShadowEffect}">
                <StackPanel MouseLeftButtonUp="BtReporteVentasProducto_Click">
                    <TextBlock Text="🛒 Ventas por Producto"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#37474F"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Genera un reporte detallado por producto vendido."
                               FontSize="13"
                               Foreground="#607D8B"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White"
                    CornerRadius="15"
                    Margin="15"
                    Padding="20"
                    BorderBrush="#CFD8DC"
                    BorderThickness="1"
                    Cursor="Hand"
                    Effect="{DynamicResource ShadowEffect}">
                <StackPanel MouseLeftButtonUp="BtReporteVentasCategoria_Click">
                    <TextBlock Text="📂 Ventas por Categoría"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#37474F"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Genera un reporte agrupado por categorías."
                               FontSize="13"
                               Foreground="#607D8B"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White"
                    CornerRadius="15"
                    Margin="15"
                    Padding="20"
                    BorderBrush="#CFD8DC"
                    BorderThickness="1"
                    Cursor="Hand"
                    Effect="{DynamicResource ShadowEffect}">
                <StackPanel MouseLeftButtonUp="BtReporteInventario_Click">
                    <TextBlock Text="📦 Reporte de Inventario"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#37474F"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Consulta el estado actual de tu inventario."
                               FontSize="13"
                               Foreground="#607D8B"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White"
                    CornerRadius="15"
                    Margin="15"
                    Padding="20"
                    BorderBrush="#CFD8DC"
                    BorderThickness="1"
                    Cursor="Hand"
                    Effect="{DynamicResource ShadowEffect}">
                <StackPanel MouseLeftButtonUp="BtReporteGanancias_Click">
                    <TextBlock Text="💰 Reporte de Ganancias"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#37474F"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Obtén un resumen de las ganancias obtenidas."
                               FontSize="13"
                               Foreground="#607D8B"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>

    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                          BlurRadius="10"
                          ShadowDepth="3"
                          Opacity="0.3"
                          Color="Black"/>
    </Window.Resources>
</Window>