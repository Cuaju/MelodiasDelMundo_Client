<UserControl x:Class="MelodiasDelMundo_Client.Views.DeleteEmployee.EmployeeDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="250" Width="400">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Detalles del Empleado" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Nombre:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Name}" Margin="0,0,0,10"/>

            <TextBlock Text="Apellidos:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Surnames}" Margin="0,0,0,10"/>

            <TextBlock Text="Teléfono:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Phone}" Margin="0,0,0,10"/>

            <TextBlock Text="Correo Electrónico:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Mail}" Margin="0,0,0,10"/>

            <TextBlock Text="Ciudad:" FontWeight="Bold"/>
            <TextBlock Text="{Binding City}" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>
