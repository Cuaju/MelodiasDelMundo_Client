<UserControl x:Class="MelodiasDelMundo_Client.Views.DeleteEmployee.EmployeeDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Name="tbName" Text="Detalles del Empleado" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Nombre:" FontWeight="Bold"/>
            <TextBlock Text="{Binding name}" Margin="0,0,0,10"/>

            <TextBlock Name="tbApellidos" Text="Apellidos:" FontWeight="Bold"/>
            <TextBlock Text="{Binding surnames}" Margin="0,0,0,10"/>

            <TextBlock Name="tbTelefono" Text="Teléfono:" FontWeight="Bold"/>
            <TextBlock Text="{Binding phone}" Margin="0,0,0,10"/>

            <TextBlock Name="tbCorreo" Text="Correo Electrónico:" FontWeight="Bold"/>
            <TextBlock Text="{Binding mail}" Margin="0,0,0,10"/>
            <Button Content="Eliminar" Background="Red" Foreground="White" Click="DeleteButton_Click" Width="164"/>

            <TextBlock Text="Ciudad:" FontWeight="Bold"/>
            <TextBlock Text="{Binding city}" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>

