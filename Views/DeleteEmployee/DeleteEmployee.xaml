<Window x:Class="MelodiasDelMundo_Client.Views.RegisterEmployee.DeleteEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelodiasDelMundo_Client.Views.DeleteEmployee"
        mc:Ignorable="d"
        Title="Eliminar Empleados" Height="500" Width="600">

    <StackPanel Margin="10">
        <Label Content="Ingresa el nombre del empleado a buscar"/>
        <TextBox x:Name="tbName" TextWrapping="Wrap" Width="120" Margin="0,0,0,10"/>
        <Button Content="Buscar" Background="GreenYellow" Click="Button_Click" Margin="0,0,0,20"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="350">
            <ItemsControl x:Name="EmployeeList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:EmployeeDetails DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</Window>
